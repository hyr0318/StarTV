<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="@mipmap/empty_logo_black"
    android:paddingBottom="@dimen/vertical_padding"
    android:paddingLeft="@dimen/horizontal_padding"
    android:paddingRight="@dimen/horizontal_padding"
    android:paddingTop="@dimen/vertical_padding">


    <com.example.hyr.startv.widget.CircleImageView
        android:src="@mipmap/default_head_img"
        android:id="@+id/drawer_avatar"
        android:layout_width="@dimen/drawer_avatar_size"
        android:layout_height="@dimen/drawer_avatar_size"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_avatar_size"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_toRightOf="@id/drawer_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drawer_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/drawer_nickname"
            android:textColor="@color/green"
            android:textSize="@dimen/text_subhead"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_length"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/drawer_about"
            android:textColor="@color/white"
            android:textSize="@dimen/text_caption" />

    </LinearLayout>


</RelativeLayout>